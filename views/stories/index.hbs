<h3 class="black-text">Shared Medical Histories</h3>
<div class="col">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content center-align "><h5 class="grey-text">{{formatDate createdAt 'MMMM Do YYYY'}}</h5>
                <p>{{stripTags (truncate body 40)}}</p>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/medicalhistories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
                </div>
                <div class="card-action center-align">
                    <a href="/medicalhistories/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No history to display</p>
    {{/each}}
</div>