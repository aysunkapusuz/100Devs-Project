<h3>Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="medicine" name="medicine" value="{{story.medicine}}">
                <label for="medicine">What medicine do you use?</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="number" name="number" value="{{story.number}}">
                <label for="number">How many did you use today?</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="shared" selected>Shared</option>
                    <option value="unshared">Unshared</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us How You Feel Today:</h5>

                <textarea id="body" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn edit">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>