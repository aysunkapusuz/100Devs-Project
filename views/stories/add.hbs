<h4>Add Your Health History</h4>
<div class="row">
    <form action="/medicalhistories" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="medicine" name="medicine">
                <label for="medicine">What medicine did you use today?</label>
            </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="number" name="number">
                <label for="number">How many did you use?</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="shared" selected>Shared</option>
                    <option value="unshared">Unshared</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5 class="grey-text">Tell Us How You Feel Today:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn save"> 
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>