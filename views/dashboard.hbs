
<h4>Welcome {{name}}! I hope you feel well today!</h4> 
<div class="divider"></div>

<h5>Your medicine usage history is below.</h5> <br>

{{#if stories}}
       <table class="highlight responsive-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name of Medicine</th>
                <th>Number of Usage</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td>{{formatDate createdAt 'MMMM Do YYYY'}}</td>
                    <td><a href="/medicalhistories/{{_id}}">{{medicine}}</a></td>
                    <td>{{number}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/medicalhistories/edit/{{_id}}" class="btn btn-green btn-float">
                            <i class="fas fa-edit"></i>
                        </a>

                        <form action="/medicalhistories/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red  btn-float">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories. Add one now!</p>
{{/if}}


